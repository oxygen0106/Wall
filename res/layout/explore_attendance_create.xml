<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_end_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/explore_attendance_create_QR" 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <TextView 
            android:id="@+id/explore_attendance_create_time_over_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="时间结束！"
            android:textColor="#d2000000"
            android:textSize="22sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/explore_attendance_create_content_tv" 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
             android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#d2000000"
            android:background="#F5F5F5"/>
        <!--  <Button
            android:id="@+id/explore_attendance_create_over_btn" 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="考勤结束"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/my_info_login_btn_selector"/>-->
    </LinearLayout>

</LinearLayout>