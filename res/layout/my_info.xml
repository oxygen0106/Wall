<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_end_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:id="@+id/my_info_my_image_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/my_info_my_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_image_round" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/my_info_my_image_layout"
        android:background="#50808080" />

    <RelativeLayout
        android:id="@+id/my_info_my_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="用户名"
            android:textColor="#d0000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_my_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="#808080"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/my_info_my_name_layout"
        android:background="#50808080" />

    <RelativeLayout
        android:id="@+id/my_info_sex_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="#d0000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="#808080"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/my_info_sex_layout"
        android:background="#50808080" />

    <RelativeLayout
        android:id="@+id/my_info_mail_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="邮箱"
            android:textColor="#d0000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_mail_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="#808080"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/my_info_mail_layout"
        android:background="#50808080" />

    <RelativeLayout
        android:id="@+id/my_info_user_note_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/my_info_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="签名"
            android:textColor="#d0000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_user_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/my_info_note_tv"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="~~~"
            android:textColor="#808080"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/my_info_login_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/my_info_login_btn_selector"
        android:gravity="center"
        android:text="登录/注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>