<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_end_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="bottom|center"
        android:orientation="vertical" >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/explore_register"/>
    </LinearLayout>
    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical" >
        <Button
            android:id="@+id/explore_attendance_create_btn" 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="新建考勤"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/my_info_login_btn_selector"/>
        
        <Button
            android:id="@+id/explore_attendance_info_btn" 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="考勤记录"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/my_info_login_btn_selector"/>
        

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>